<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd">
    <bean id="student_01" class="com.example.demo.spring.bean.Student" >
        <property name="name" value="Jack"/>
        <property name="id" value="1" />
        <property name="classNo" value="A"/>
    </bean>

    <bean id="student_02" class="com.example.demo.spring.bean.Student">
        <property name="name" value="Jane"/>
        <property name="id" value="2"/>
        <property name="classNo" value="A"/>
    </bean>

    <bean id="class_A" class="com.example.demo.spring.bean.Classroom">
        <property name="name" value="B"/>
        <property name="students">
            <list>
                <ref bean="student_01"/>
                <ref bean="student_02"/>
            </list>
        </property>
    </bean>
</beans>